    "@rollup/plugin-replace": "^5.0.2",
    "@svgr/rollup": "^8.0.1",
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/jest": "^29.5.3",
    "@types/node": "^20.5.7",
    "@types/react": "^18.2.21",
